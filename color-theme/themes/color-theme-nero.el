(require 'color-theme)

(defun color-theme-nero ()
  (interactive)
  (color-theme-install
   '(color-theme-nero
      ((background-color . "#000000")
      (background-mode . dark)
      (border-color . "#222222")
      (cursor-color . "#0573ff")
      (foreground-color . "#cccccc")
      (mouse-color . "#333333"))
     (fringe ((t (:background "#303030"))))
     (mode-line ((t (:foreground "#2cb7d8" :background "#111111"))))
     (modeline-buffer-id ((t (:foreground "#0573ff" :background "#131313"))))
     (modeline-mousable ((t (:foreground "#0573ff" :background "#222222"))))
     (modeline-mousable-minor-mode ((t (:foreground "#0573ff" :background "#222222"))))
     (minibuffer-prompt ((t (:foreground "#1f5fa3" :bold t))))
     (region ((t (:foreground "#ffffff" :background "#310566"))))
     (hl-line ((t (:background "#111111"))))
     (font-lock-builtin-face ((t (:foreground "#f500ef"))))
     (font-lock-comment-face ((t (:foreground "#404040"))))
     (font-lock-function-name-face ((t (:foreground "#00A6FF"))))
     (font-lock-keyword-face ((t (:foreground "#56a4eb"))))
     (font-lock-string-face ((t (:foreground "#978449"))))
     (font-lock-type-face ((t (:foreground"#ad75ea"))))
     (font-lock-variable-name-face ((t (:foreground "#1ed4fa"))))
     (font-lock-warning-face ((t (:foreground "Red" :bold t))))
     )))
(color-theme-nero)